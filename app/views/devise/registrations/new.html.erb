<div class="wrapper-container">
  <div class="wraper">
    <span class="bg-animation2"></span>
    <div class="form-box register">
      <h2>Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "enter-field", class: "input" %>
          <%= f.label :name, class: "label" %>
          <i class="fa-solid fa-user"></i>
        </div>

        <div class="field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
          <%= f.label :email, class: "label" %>
          <i class="fa-sharp fa-solid fa-paper-plane"></i>
        </div>

        <div class="field">
          <%= f.password_field :password, autocomplete: "new-password", class: "input" %>
          <%= f.label :password, class: "label" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <i class="fa-solid fa-lock"></i>
        </div>

        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input" %>
          <%= f.label :password_confirmation, class: "label" %><br />
          <i class="fa-solid fa-lock"></i>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: "submit" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
    <div class="info-text register">
      <h2>Welcome!</h2>
      <p>Please, create an acount and start using the app</p>
    </div>
  </div>
</div>
